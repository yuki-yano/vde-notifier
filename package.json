{
  "name": "vde-notifier",
  "version": "0.1.7",
  "description": "tmux focus notification CLI for macOS",
  "type": "module",
  "bin": {
    "vde-notifier": "dist/cli.js"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "swift:test": "env -u LIBRARY_PATH swift test --package-path app/vde-notifier-app",
    "swift:build": "env -u LIBRARY_PATH swift build --package-path app/vde-notifier-app --product vde-notifier-app",
    "swift:app": "app/vde-notifier-app/scripts/build-app.sh",
    "swift:release-asset": "app/vde-notifier-app/scripts/create-release-asset.sh",
    "lint": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "pack:check": "pnpm run build && npm pack --dry-run --json --ignore-scripts | node scripts/verify-npm-pack.mjs",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci": "pnpm run format:check && pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run pack:check",
    "prepack": "pnpm run build",
    "prepublishOnly": "pnpm run ci"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "execa": "^8.0.1",
    "kleur": "^4.1.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "tsdown": "^0.20.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "keywords": [
    "tmux",
    "notification",
    "focus",
    "macos"
  ],
  "author": "Yuki Yano",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "os": [
    "darwin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yuki-yano/vde-notifier"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
