{
  "name": "vde-notifier",
  "version": "0.0.6",
  "description": "tmux focus notification CLI for macOS",
  "type": "module",
  "bin": {
    "vde-notifier": "dist/cli.js"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "swift:test": "env -u LIBRARY_PATH swift test --package-path app/vde-notifier-app",
    "swift:build": "env -u LIBRARY_PATH swift build --package-path app/vde-notifier-app --product vde-notifier-app",
    "swift:app": "app/vde-notifier-app/scripts/build-app.sh",
    "swift:release-asset": "app/vde-notifier-app/scripts/create-release-asset.sh",
    "lint": "eslint .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci": "pnpm run format:check && pnpm run typecheck && pnpm run lint && pnpm run test",
    "prepublishOnly": "pnpm run ci && pnpm run build"
  },
  "dependencies": {
    "execa": "^8.0.1",
    "kleur": "^4.1.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@types/node": "^22.5.4",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "tsdown": "^0.15.6",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "keywords": [
    "tmux",
    "notification",
    "focus",
    "macos"
  ],
  "author": "Yuki Yano",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
